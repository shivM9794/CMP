<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeSection.BasicDetails3Activity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/basic_details3_txt3"
        app:layout_constraintEnd_toEndOf="@+id/step3_img1"
        app:layout_constraintStart_toEndOf="@+id/step3_img1"
        app:layout_constraintTop_toTopOf="@+id/basic_details3_txt3">


        <LinearLayout
            android:id="@+id/basic_details3"
            android:layout_width="0dp"
            android:layout_height="?actionBarSize"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/basic_detail3_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_back_arrow" />

            <Button
                android:id="@+id/edit3"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="80dp"
                android:layout_height="35dp"
                android:layout_marginStart="215dp"
                android:background="@drawable/background_input"
                android:focusableInTouchMode="true"
                android:gravity="center"
                android:paddingStart="10dp"
                android:text="Edit"
                android:textAllCaps="false"
                tools:ignore="RtlSymmetry" />


        </LinearLayout>

        <TextView
            android:id="@+id/basic_detail3_txt1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="784dp"
            android:fontFamily="@font/open_sans"
            android:text="Step 2 of 3"
            android:textAllCaps="true"
            android:textColor="#323232"
            android:textSize="15sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/basic_details3"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/basic_detail3_txt2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:fontFamily="@font/open_sans_semibold"
            android:text="Property Photos"
            android:textColor="@color/black"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/basic_detail3_txt1" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:fontFamily="@font/open_sans"
            android:text="Photos of Property"
            android:textColor="#323232"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/basic_detail3_txt2" />

        <ImageView
            android:id="@+id/basic_details2_step3"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="8dp"
            android:layout_marginRight="10dp"
            android:src="@drawable/step2_img_bar"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView" />


        <ImageView
            android:id="@+id/step3_img1"
            android:layout_width="160dp"
            android:layout_height="100dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="16dp"
            android:scaleType="fitXY"
            android:src="@drawable/step3_img"
            app:layout_constraintEnd_toStartOf="@+id/step3_img2"
            app:layout_constraintTop_toBottomOf="@+id/basic_details2_step3"
            tools:ignore="MissingConstraints" />

        <ImageView
            android:id="@+id/step3_img2"
            android:layout_width="160dp"
            android:layout_height="100dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="16dp"
            android:scaleType="fitXY"
            android:src="@drawable/step3_img"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/basic_details2_step3"
            tools:ignore="MissingConstraints" />

        <ImageView
            android:id="@+id/step3_img3"
            android:layout_width="160dp"
            android:layout_height="100dp"
            android:layout_marginTop="120dp"
            android:layout_marginEnd="16dp"
            android:scaleType="fitXY"
            android:src="@drawable/step3_img"
            app:layout_constraintEnd_toStartOf="@+id/step3_img2"
            app:layout_constraintTop_toBottomOf="@+id/basic_details2_step3"
            tools:ignore="MissingConstraints" />

        <ImageView
            android:id="@+id/step3_img4"
            android:layout_width="160dp"
            android:layout_height="100dp"
            android:layout_marginTop="12dp"
            android:scaleType="fitXY"
            android:src="@drawable/step3_img"
            app:layout_constraintEnd_toEndOf="@+id/step3_img2"
            app:layout_constraintTop_toBottomOf="@+id/step3_img2" />

        <TextView
            android:id="@+id/basic_details3_txt3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:fontFamily="@font/open_sans_semibold"
            android:text="What makes your property unique?"
            android:textColor="@color/black"
            android:textSize="15sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.057"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/step3_img3" />

        <TextView
            android:id="@+id/basic_details3_txt4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/open_sans"
            android:text="Adding description will increase your listing visibility "
            android:textColor="@color/black"
            android:textSize="13sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.163"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/basic_details3_txt3" />


        <TextView
            android:id="@+id/txt_descp_box"
            android:layout_width="340dp"
            android:layout_height="150dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="12dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/textview_bg"
            android:gravity="start"
            android:textColor="@color/black"
            android:hint="Share some details about your property like spacious rooms, well maintained facalities..."
            android:paddingLeft="10dp"
            android:paddingTop="10dp"
            android:paddingRight="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.225"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/basic_details3_txt4" />

        <Button
            android:id="@+id/detail3_next_btn"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginTop="12dp"
            android:background="@drawable/forgot_pass_button_bg"
            android:drawableEnd="@drawable/ic_arrow_forward"
            android:text="NEXT"
            android:textColor="@color/white"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.879"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txt_descp_box" />

    </androidx.constraintlayout.widget.ConstraintLayout>



</ScrollView>