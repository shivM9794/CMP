<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".HomeSection.BasicDetails2Activity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:id="@+id/basic_details2"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginBottom="395dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            app:layout_constraintBottom_toTopOf="@+id/spinner1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/basic_detail2_img"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_back_arrow" />

            <Button
                android:id="@+id/edit2"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="90dp"
                android:layout_height="30dp"
                android:layout_marginLeft="215dp"
                android:background="@drawable/background_input"
                android:drawableLeft="@drawable/edit1"
                android:focusableInTouchMode="true"
                android:gravity="center"
                android:paddingStart="10dp"
                android:text="Edit"
                android:textAllCaps="false" />


        </LinearLayout>


        <TextView
            android:id="@+id/bsaic_ddetail2_txt1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/open_sans"
            android:text="Step 2 of 4"
            android:textAllCaps="true"
            android:textColor="#323232"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/basic_details2"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/bsaic_ddetail2_txt2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/open_sans_semibold"
            android:text="Property Details"
            android:textColor="@color/black"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/bsaic_ddetail2_txt1"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/bsaic_ddetail2_txt3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/open_sans"
            android:text="Location, Room Details, Area etc"
            android:textColor="#323232"
            android:textSize="15sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.502"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/bsaic_ddetail2_txt2"
            app:layout_constraintVertical_bias="0.0" />

        <ImageView
            android:id="@+id/step1_logo"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginStart="4dp"
            android:src="@drawable/step_2_logo"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/bsaic_ddetail2_txt3"
            app:layout_constraintVertical_bias="0.018" />

        <TextView
            android:id="@+id/bsaic_ddetail2_txt4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:fontFamily="@font/open_sans_semibold"
            android:text="Where is it located?"
            android:textColor="@color/black"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.061"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/step1_logo"
            app:layout_constraintVertical_bias="0.01" />

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/location_field1"
            android:layout_width="340dp"
            android:layout_height="50dp"
            android:background="@drawable/edittext_bg"
            android:hint="Marina"
            android:inputType="text"
            android:padding="15dp"
            android:paddingStart="20dp"
            android:textColor="@color/black"
            android:textColorHint="@color/black"
            android:textSize="15sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.357"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/bsaic_ddetail2_txt4"
            app:layout_constraintVertical_bias="0.013" />


        <View
            android:id="@+id/view1"
            android:layout_width="0dp"
            android:layout_height="2dp"
            android:layout_marginLeft="10dp"
            android:alpha="0.1"
            android:background="@color/colorRemaining"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/basic_details2_txt5"
            app:layout_constraintHorizontal_bias="0.307"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/location_field1"
            app:layout_constraintVertical_bias="0.042" />

        <TextView
            android:id="@+id/basic_details2_txt5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/open_sans_semibold"
            android:text="Add Rooms Details"
            android:textColor="@color/black"
            android:textSize="17dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.47"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/location_field1"
            app:layout_constraintVertical_bias="0.022" />

        <View
            android:id="@+id/view2"
            android:layout_width="0dp"
            android:layout_height="2dp"
            android:layout_marginTop="22dp"
            android:layout_marginRight="10dp"
            android:alpha="0.1"
            android:background="@color/colorRemaining"
            android:padding="10dp"
            app:layout_constraintBottom_toTopOf="@+id/basic_details2_txt6"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.753"
            app:layout_constraintStart_toEndOf="@+id/basic_details2_txt5"
            app:layout_constraintTop_toBottomOf="@+id/location_field1"
            app:layout_constraintVertical_bias="0.0"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/basic_details2_txt6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="368dp"
            android:fontFamily="@font/open_sans_semibold"
            android:text="No. of bedrooms"
            android:textColor="@color/black"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.046"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/basic_details2_txt5"
            app:layout_constraintVertical_bias="0.078" />

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/no_of_bedrooms"
            android:layout_width="340dp"
            android:layout_height="50dp"
            android:background="@drawable/edittext_bg"
            android:gravity="center_vertical"
            android:hint="03"
            android:inputType="number"
            android:padding="15dp"
            android:paddingStart="20dp"
            android:textColorHint="@color/black"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.323"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/basic_details2_txt6"
            app:layout_constraintVertical_bias="0.032" />

        <TextView
            android:id="@+id/area_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/open_sans_semibold"
            android:text="Area Details"
            android:textColor="@color/black"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.078"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/no_of_bedrooms" />

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/area_measurement"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/custom_inputs"
            android:hint="1000"
            android:inputType="numberDecimal"
            android:padding="12dp"
            android:textColor="@color/black"
            app:layout_constraintStart_toStartOf="@+id/area_txt"
            app:layout_constraintTop_toBottomOf="@+id/area_txt" />

        <Spinner
            android:id="@+id/spinner1"
            android:layout_width="150dp"
            android:layout_height="0dp"
            android:layout_marginBottom="345dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.395"
            app:layout_constraintStart_toEndOf="@+id/area_measurement"
            app:layout_constraintTop_toBottomOf="@+id/basic_details2"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/basic_details2_txt7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="276dp"
            android:fontFamily="@font/open_sans_semibold"
            android:text="What Kind of Property?"
            android:textColor="@color/black"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.056"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/area_measurement"
            app:layout_constraintVertical_bias="0.378" />

        <TextView
            android:id="@+id/basic_detail2_txt8"
            android:layout_width="120dp"
            android:layout_height="30dp"
            android:background="@drawable/background_input"
            android:gravity="center"
            android:text="Individual"
            android:textColor="@color/black"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.054"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/basic_details2_txt7"
            app:layout_constraintVertical_bias="0.058" />

        <TextView
            android:id="@+id/basic_detail2_txt10"
            android:layout_width="120dp"
            android:layout_height="30dp"
            android:alpha="0.5"
            android:background="@drawable/btn_change"
            android:gravity="center"
            android:text="Company"
            android:textColor="@color/black"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.103"
            app:layout_constraintStart_toEndOf="@+id/basic_detail2_txt8"
            app:layout_constraintTop_toBottomOf="@+id/basic_details2_txt7"
            app:layout_constraintVertical_bias="0.056" />

        <TextView
            android:id="@+id/basic_detail2_txt11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:fontFamily="@font/open_sans_semibold"
            android:text="Title Deed"
            android:textColor="@color/black"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.056"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/basic_detail2_txt8"
            app:layout_constraintVertical_bias="0.048" />

        <Button
            android:id="@+id/btn_deed"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="340dp"
            android:layout_height="49dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/btn_change"
            android:drawableStart="@drawable/deed"
            android:drawableEnd="@drawable/download"
            android:drawablePadding="15dp"
            android:gravity="start"
            android:padding="15dp"
            android:text="Title Deed"
            android:textAllCaps="false"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/basic_details2"
            app:layout_constraintHorizontal_bias="0.363"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/basic_detail2_txt11"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/basic_detail2_txt12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:fontFamily="@font/open_sans_semibold"
            android:text="EID or Passport"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.05"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btn_deed"
            app:layout_constraintVertical_bias="0.059" />

        <Button
            android:id="@+id/btn_eid_passport"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="340dp"
            android:layout_height="49dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/btn_change"
            android:drawableStart="@drawable/deed"
            android:drawableEnd="@drawable/download"
            android:drawablePadding="15dp"
            android:gravity="start"
            android:padding="15dp"
            android:text="EID"
            android:textAllCaps="false"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.323"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/basic_detail2_txt12"
            app:layout_constraintVertical_bias="0.0" />

        <Button
            android:id="@+id/basic_details2_nextbtn"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/forgot_pass_button_bg"
            android:drawableEnd="@drawable/ic_arrow_forward"
            android:text="Next"
            android:textAllCaps="true"
            android:textColor="@color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.916"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btn_eid_passport"
            app:layout_constraintVertical_bias="0.809" />

    </androidx.constraintlayout.widget.ConstraintLayout>


</ScrollView>